<%- include("partials/header") %>
    <%# linking header with Dashboard %>

        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Currency Settings</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Currency Settings</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- general form elements disabled -->
                        <div class="card card-dark">
                            <div class="card-header">
                                <h3 class="card-title">Currency Settings</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="alert alert-success">

                                    Active Currency:
                                    <% if(currency_data !==null) { %>
                                        <%= currency_data.option_value %>
                                            <% } else{ %>
                                                <%= "No Currency Selected" %>
                                                    <%} %>
                                </div>



                                <form role="form" method="POST" action="/admin/currency-settings"
                                    id="frm-currency-settings">
                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Select Currency</label>
                                                <select class="form-control" name="dd_currency">
                                                    <option value="">Choose Currency</option>
                                                    <option value="USD">USD (US Dollar)</option>
                                                    <option value="INR">INR(Indian Rupee)</option>
                                                    <option value="EUR">EUR(Euro)</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-dark" type="submit">Submit</button>
                                </form>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </div>

                </div>
                <!-- /.row -->
                <!-- Main row -->

                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <%- include("partials/footer") %>
            <%# linking footer with Dashboard %>