<%- include("partials/header") %>
    <%# linking header with Dashboard %>
        <style>
            th,
            td {
                text-align: center;
            }
        </style>
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">List User</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">List User</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- general form elements disabled -->
                        <div class="card card-dark">
                            <div class="card-header">
                                <h3 class="card-title">List User</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="tbl-list-category" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>

                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(function(user){%>
                                            <tr>

                                                <td>
                                                    <%= user.name %>
                                                </td>
                                                <td>
                                                    <%=user.email %>
                                                </td>
                                                <td>
                                                    <%= user.mobile%>
                                                </td>
                                                <td>
                                                    <% if(Number(user.status)){ %>
                                                        <button class="btn btn-success">Active</button>
                                                        <% } else{ %>

                                                            <button class="btn btn-danger">Inactive</button>
                                                            <% } %>
                                                </td>

                                                <td>
                                                    <a href="/admin/edit-user/<%= user.id %> " class="btn btn-info"><i
                                                            class="fa fa-edit"></i></a>

                                                    <a href="javascript:void(0)"
                                                        onclick="if(confirm('Are you sure want to delete')){$('#frm-delete-user-<%=user.id%>').submit()}"
                                                        class="btn btn-danger"><i class="fa fa-trash"></i></a>

                                                    <form action="/admin/delete-user/<%=user.id%>" method="POST"
                                                        id="frm-delete-user-<%= user.id %>">
                                                        <input type="hidden" value="<%=user.id%>" name="user_id" />
                                                    </form>

                                                </td>
                                            </tr>

                                            <% }) %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </div>

                </div>
                <!-- /.row -->
                <!-- Main row -->

                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <%- include("partials/footer") %>
            <%# linking footer with Dashboard %>