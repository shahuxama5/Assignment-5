<%- include("partials/header") %>
    <%# linking header with Dashboard %>

        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">List Issue Books</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">List Issue Books</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- general form elements disabled -->
                        <div class="card card-dark">
                            <div class="card-header">
                                <h3 class="card-title">List Issue Books</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="tbl-list-issue-books" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th>Book Name</th>
                                            <th>UserInfo</th>
                                            <th>Total Days</th>
                                            <th>Issue Date</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% list.forEach(function(data){ %>
                                            <tr>
                                                <td>
                                                    <%= data.Category.name %>
                                                </td>
                                                <td>
                                                    <%= data.Book.name %>
                                                </td>
                                                <td>
                                                    Name: <%= data.User.name %> <br>
                                                        Email: <%= data.User.email %>
                                                </td>
                                                <td>
                                                    <%= data.days_issued %>
                                                </td>
                                                <td>
                                                    <%= data.issued_date %>
                                                </td>
                                            </tr>
                                            <% }) %>



                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Category</th>
                                            <th>Book</th>
                                            <th>UserInfo</th>
                                            <th>Total Days</th>
                                            <th>Issue Date</th>


                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </div>

                </div>
                <!-- /.row -->
                <!-- Main row -->

                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <%- include("partials/footer") %>
            <%# linking footer with Dashboard %>